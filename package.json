{
	"name": "razor",
	"version": "0.0.3",
	"private": true,
	"scripts": {
		"clean-android-build": "rimraf android/build && rimraf android/app/build && rimraf build",
		"delete": "rimraf build",
		"assets": "copyfiles -u 1 App/Assets/** build",
		"build": "yarn delete && yarn && yarn lint && yarn tsc && yarn assets",
		"lint": "tslint src/**/*.ts* --type-check --project tsconfig.json",
		"watch": "yarn build && yarn lint && tsc -p . --watch",
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest",
		"run-ios": "yarn build && concurrently \"yarn watch\" \"react-native run-ios\"",
		"run-android": "yarn build && concurrently \"yarn watch\" \"react-native run-android\""
	},
	"dependencies": {
		"moment": "^2.18.1",
		"react": "16.0.0-alpha.12",
		"react-native": "0.48.3",
		"react-native-i18n": "^2.0.6",
		"react-native-vector-icons": "^4.4.0",
		"react-navigation": "^1.0.0-beta.11",
		"react-redux": "^5.0.6",
		"redux": "^3.7.2",
		"redux-logger": "^3.0.6",
		"redux-persist": "^4.9.1",
		"redux-persist-transform-encrypt": "^1.0.2",
		"redux-saga": "^0.15.6"
	},
	"devDependencies": {
		"@types/react": "16.0.5",
		"@types/react-native": "^0.48.6",
		"@types/react-native-vector-icons": "^4.3.2",
		"@types/react-navigation": "^1.0.20",
		"@types/react-redux": "^5.0.9",
		"@types/redux-logger": "^3.0.3",
		"@types/redux-persist-transform-encrypt": "^1.0.1",
		"react-native-cli": "^2.0.1",
		"babel-jest": "21.0.2",
		"babel-preset-react-native": "4.0.0",
		"concurrently": "^3.5.0",
		"copyfiles": "^1.2.0",
		"jest": "21.1.0",
		"react-test-renderer": "16.0.0-alpha.12",
		"rimraf": "^2.6.2",
		"tslint": "^5.7.0",
		"typescript": "^2.5.2"
	},
	"jest": {
		"preset": "react-native"
	}
