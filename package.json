		"@types/react": "16.0.5",
		"@types/react-native": "^0.48.4",
		"rimraf": "^2.6.2",
		"tslint": "^5.7.0",
		"babel-jest": "21.0.2",
		"babel-preset-react-native": "3.0.2",
		"jest": "21.1.0",
		"react-test-renderer": "16.0.0-alpha.12"
	},
	"jest": {
		"preset": "react-native"
	}
